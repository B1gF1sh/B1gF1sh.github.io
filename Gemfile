# frozen_string_literal: true

source "https://rubygems.org"

# Bu tek satır, GitHub'ın desteklediği TÜM eklentileri ve doğru Jekyll versiyonunu otomatik olarak yükler.
# Bu, uyumluluk sorunlarını tamamen ortadan kaldırır.
gem "github-pages", group: :jekyll_plugins

# Bu satır, Jekyll'in yeni Ruby versiyonlarıyla yerel bilgisayarında çalışması için gereklidir.
gem "webrick", "~> 1.9"

# Bu satır, Windows'ta yerel geliştirme için gereklidir.
gem "wdm", "~> 0.2.0" if Gem.win_platform?